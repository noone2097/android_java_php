<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ivy_crumb_co" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary branding color for the app -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/textColorPrimary</item>
        <!-- Secondary branding color for the app -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/textColorPrimary</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Ivy_crumb_co" parent="Base.Theme.Ivy_crumb_co" />

    <!-- Custom EditText Style -->
    <style name="CustomEditText">
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/editTextBackground</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton">
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>